<%= turbo_frame_tag "friends-search-form" do %>
  <%= form_tag search_friend_path, data: { turbo_stream: :form_response }, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 pe-0">
        <%= text_field_tag :friend, params[:friend], placeholder: "Search friends", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 ps-0">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>  
<% end %>