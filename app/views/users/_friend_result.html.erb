<%= turbo_frame_tag "friend-result" do %>
  <% if @friends %>
    <div class="card card-header d-inline-block my-3">
      <table class="col-md-12 col-sm-6">
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td>
                <strong>Name: </strong>
                <%= friend.full_name %></td>
              <td>
                <strong>Email: </strong>
                <%= friend.email %></td>
              <td>
                <%= link_to "Profile", "#", class: "btn btn-sm btn-success" %>
                <% if current_user.not_friends_with?(friend.id) %>
                  <%= link_to 'Follow', "", data: { turbo_method: :post }, class: "btn btn-sm btn-success" %>
                <% else %>
                  <%= link_to 'Unfollow', friendship_path(friend), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                                              class: "btn btn-sm btn-warning" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
