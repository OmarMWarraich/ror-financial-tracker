
<h1>My Portfolio</h1>
  <div id="stock-search-results" class="mt-3">
    <h3>Search Stocks</h3>
      <%= form_tag search_stock_path, data: { turbo_frame: :form_response }, method: :get do %>
        <div class="form-group row">
          <div class="col-sm-9 pe-0">
            <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
          </div>
          <div class="col-sm-3 ps-0">
            <%= button_tag type: :submit, class: "btn btn-success" do %>
              <%= fa_icon "search 2x" %>
            <% end %>
          </div>
        </div>
      <% end %>  

  <%= turbo_frame_tag "search_results" do %>
    <%= render "users/result", stock: @stock %>
  <% end %>

  <% if !@tracked_stocks.empty? %>
    <%= render "stocks/list" %>
  <% end %>
</div>